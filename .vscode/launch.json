{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Dev Server",
            "runtimeExecutable": "npm",
            "args": ["run", "dev"],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build Application",
            "runtimeExecutable": "npm",
            "args": ["run", "build"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Preview Build",
            "runtimeExecutable": "npm",
            "args": ["run", "preview"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Vitest Tests",
            "runtimeExecutable": "npm",
            "args": ["run", "vitest"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Vitest Coverage",
            "runtimeExecutable": "npm",
            "args": ["run", "vitest_coverage"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Check Svelte",
            "runtimeExecutable": "npm",
            "args": ["run", "svelte_check"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Prettier Format Code",
            "runtimeExecutable": "npm",
            "args": ["run", "format"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ESLint Code",
            "runtimeExecutable": "npm",
            "args": ["run", "lint"],
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tauri Development Debug",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=./Cargo.toml",
                    "--no-default-features"
                ]
            },
            "preLaunchTask": "ui:dev"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tauri Production Debug",
            "cargo": {
                "args": ["build", "--release", "--manifest-path=./Cargo.toml"]
            },
            "preLaunchTask": "ui:build"
        }
    ]
}
